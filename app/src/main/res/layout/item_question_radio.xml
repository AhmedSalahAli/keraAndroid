<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.app.kera.data.models.teacherDailyReport.DailyReportResponseModel.DataBean.AnswersBean.OptionsBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraint_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:minWidth="74dp"
        android:minHeight="100dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_white_fcfcfc_stroke_fed93b"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mood_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@{model.value}"
            android:textColor="#0093DE"
            android:textSize="@dimen/_14ssp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox2"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="happy" />

        <RadioButton
            android:id="@+id/checkBox2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:button="@null"
            android:background="@drawable/rd_background_selection"
            android:buttonTint="#50C4FF"
            android:gravity="center"
            android:minWidth="0dp"

            android:layout_marginTop="10dp"
            android:clickable="false"
            android:minHeight="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView25"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
