<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigation.ui.NavigationMapFragment">

    <data>
        <variable
            name="viewModel"
            type="com.app.kera.navigation.ui.NavigationMapViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context=".navigation.ui.MapsFragment"
    android:paddingBottom="100dp"
    android:paddingTop="150dp"
    android:clipToPadding="false"
    android:name="com.google.android.gms.maps.SupportMapFragment"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/BmyLocationCard"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/shadow_dark_blue"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_marginEnd="35dp"
            android:layout_marginTop="240dp"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_100sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <ImageView
                android:id="@+id/BmyLocation"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:layout_gravity="center"


                android:src="@drawable/ic_baseline_my_location_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>