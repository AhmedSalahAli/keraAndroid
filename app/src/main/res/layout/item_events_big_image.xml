<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.app.kera.events.model.UpcomingItemUIModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp">

        <com.app.kera.utils.RoundCornerLayout
            android:id="@+id/roundCornerLayout4"
            android:layout_width="223dp"
            android:layout_height="140dp"
            app:bottomLeftEnabled="true"
            app:bottomRightEnabled="true"
            app:cornerRadius="30dp"
            android:background="@drawable/rounded_white_orange_stroke30dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:topLeftEnabled="true"
            app:topRightEnabled="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:image="@{model.mainCover}"

                android:src="@drawable/upload_pic" />


        </com.app.kera.utils.RoundCornerLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout16"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/rounded_orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundCornerLayout4">

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_ui_display_regular"


                android:textColor="#FFBB3B"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/sf_ui_display_regular"

                android:textColor="#152D4A"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView60"
                app:layout_constraintStart_toStartOf="@+id/textView60"
                app:layout_constraintTop_toBottomOf="@+id/textView60" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout16"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout16"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout16">

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="@{model.shortDescription}"
                android:textColor="#0093DE"
                android:textSize="12sp"
                android:maxLines="1"
                android:maxEms="30"
                android:maxLength="30"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="@{model.address}"
                android:textColor="#8C99A7"
                android:textSize="10sp"
                android:maxEms="30"
                android:maxLength="30"
                android:ellipsize="end"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_calendar_small_grey"
                app:layout_constraintStart_toStartOf="@+id/textView55"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
