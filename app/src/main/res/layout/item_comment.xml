<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="utils"
            type="com.app.kera.utils.CommonUtils" />
        <variable
            name="model"
            type="com.app.kera.data.models.teacherDailyReport.DailyReportResponseModel.DataBean.Replies" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_strok_only"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView88"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"

            app:image="@{model.student.profileImage}"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_person"
            android:layout_margin="@dimen/_10sdp"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="#6BA9D0E4"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView88"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView88"
            app:layout_constraintTop_toTopOf="@+id/imageView88">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/sf_ui_display_semibold"
                android:text="@{model.student.username}"

                android:textAlignment="viewStart"

                android:textColor="#1A2F50"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"

                android:fontFamily="@font/sf_ui_display_regular"

                android:maxLines="4"
                android:textColor="#000000"

                android:textSize="12dp" />
        </LinearLayout>



        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{model.reply}"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sf_ui_display_regular"

            android:textColor="@color/black"
            android:textSize="12dp"
            android:textAlignment="viewStart"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imageView88"
            app:layout_constraintTop_toBottomOf="@+id/imageView88" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
