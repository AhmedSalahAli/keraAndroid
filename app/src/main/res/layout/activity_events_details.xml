<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.app.kera.events.ui.eventsdetails.EventsDetailsViewModel" />
        <variable
            name="adapter"
            type="com.app.kera.events.adapter.ChildrenAdapter" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <com.skydoves.androidveil.VeilLayout
        android:id="@+id/veilLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:veilLayout_veiled="true"
        app:veilLayout_shimmerEnable="true"
        app:veilLayout_baseColor="@color/gray_D2DCE8"
        app:veilLayout_highlightColor="@color/white"
        app:veilLayout_baseAlpha="0.6"
        app:veilLayout_highlightAlpha="1.0"
        app:veilLayout_dropOff="0.5"
        app:veilLayout_radius="6dp"

        app:layout_constraintTop_toBottomOf="@+id/view"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".events.ui.eventsdetails.EventsDetailsActivity">




        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/roundCornerLayout5"
            android:layout_width="wrap_content"
            android:layout_height="210dp"


            app:cardElevation="20dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="right"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="13dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#0093DE"
                app:sliderIndicatorUnselectedColor="#D2DCE8"
                app:sliderStartAutoCycle="true" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_more_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#50C4FF"
                android:clickable="true"
                app:tint="@color/white"
                app:elevation="@dimen/_1sdp"
                android:elevation="5dp"
                app:srcCompat="@drawable/ic_baseline_image_24"
                android:alpha="0.9"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline226"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="33dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:alpha="0.8"
                android:elevation="@dimen/_11sdp"

                app:layout_constraintStart_toStartOf="@+id/guideline226"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_rounded_back" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@{viewModel.eventDetails.title}"
            android:textColor="#0093DE"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/roundCornerLayout5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="33dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="33dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:minWidth="55dp"
            android:minHeight="30dp"
            android:background="@drawable/rounded_pink_fdebf7"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/textView68">

            <TextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="@{viewModel.eventDetails.eventDateE}"
                android:textColor="#5881A4"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/sf_ui_display_semibold"
                android:text="@{viewModel.eventDetails.eventDateD}"
                android:textColor="#5881A4"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView69"
                app:layout_constraintStart_toStartOf="@+id/textView69"
                app:layout_constraintTop_toBottomOf="@+id/textView69" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout17"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout17"
            app:srcCompat="@drawable/ic_takeoff" />
        <TextView
            android:id="@+id/textView711"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@string/from"
            android:textColor="#152D4A"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView48"
            app:layout_constraintStart_toEndOf="@+id/imageView48"
            app:layout_constraintTop_toTopOf="@+id/imageView48" />

        <TextView
            android:id="@+id/textView71"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@{viewModel.eventDetails.fromTime}"
            android:textColor="#FFBB3B"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView48"
            app:layout_constraintStart_toEndOf="@+id/textView711"
            app:layout_constraintTop_toTopOf="@+id/imageView48" />

        <ImageView
            android:id="@+id/imageView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/imageView48"
            app:layout_constraintTop_toBottomOf="@+id/imageView48"
            app:srcCompat="@drawable/ic_land" />
        <TextView
            android:id="@+id/textView722"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@string/to"
            android:textColor="#8C99A7"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView49"
            app:layout_constraintStart_toEndOf="@+id/imageView49"
            app:layout_constraintTop_toTopOf="@+id/imageView49" />
        <TextView
            android:id="@+id/textView72"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@{viewModel.eventDetails.toTime}"
            android:textColor="#FFBB3B"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView49"
            app:layout_constraintStart_toEndOf="@+id/textView722"
            app:layout_constraintTop_toTopOf="@+id/imageView49" />

        <ImageView
            android:id="@+id/imageView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline25"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout17"
            app:srcCompat="@drawable/ic_calender_up" />



        <TextView
            android:id="@+id/textView74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@string/calendar"
            android:textColor="#8C99A7"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView50"
            app:layout_constraintStart_toStartOf="@+id/imageView50"
            app:layout_constraintTop_toBottomOf="@+id/imageView50" />



        <TextView
            android:id="@+id/textView76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textColor="#152D4A"
            android:text="@string/details"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout17" />

        <TextView
            android:id="@+id/textView77"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="#5881A4"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@{viewModel.eventDetails.description}"

            app:layout_constraintEnd_toStartOf="@+id/guideline25"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/textView76" />

        <ImageView
            android:id="@+id/imageView51"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/textView77"
            app:srcCompat="@drawable/ic_location_black" />

        <TextView
            android:id="@+id/textView78"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@{viewModel.eventDetails.address}"
            android:textColor="#8C99A7"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView51"
            app:layout_constraintStart_toEndOf="@+id/imageView51"
            app:layout_constraintEnd_toStartOf="@id/guideline25"
            app:layout_constraintTop_toTopOf="@+id/imageView51" />

        <TextView
            android:id="@+id/textView79"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/sf_ui_display_regular"
            android:text="@string/price"
            android:textColor="#152D4A"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/imageView51" />

        <TextView
            android:id="@+id/textView80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"

            android:textColor="#2DB7BE"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/guideline26"
            app:layout_constraintTop_toBottomOf="@+id/textView79" />

        <FrameLayout
            android:id="@+id/attend_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:minWidth="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
             android:layout_marginBottom="@dimen/_100sdp"
            android:layout_marginStart="@dimen/_24sdp"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomCardCornersOpOp"
                app:cardElevation="@dimen/_1sdp"
                android:minWidth="@dimen/_50sdp"

                app:cardBackgroundColor="#FCFCFC"
              android:layout_marginStart="@dimen/_35sdp"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    app:adapter="@{adapter}"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_gravity="start|center"
                    app:layout_constraintEnd_toStartOf="@+id/guideline44"
                    app:layout_constraintStart_toStartOf="@+id/guideline43"
                    app:layout_constraintTop_toBottomOf="@+id/textView_number_of_classes"
                    android:layoutAnimation="@anim/layout_animation_slide_from_bottom"

                    />
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                app:cardBackgroundColor="#50C4FF"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_2sdp"
                android:layout_gravity="start|center"
                android:text="Accept">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Accept"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    android:textColor="#152D4A"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    app:layout_constraintStart_toStartOf="@+id/guideline26"
                    app:layout_constraintTop_toBottomOf="@+id/textView79" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.skydoves.androidveil.VeilLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
