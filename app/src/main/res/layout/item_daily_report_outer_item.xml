<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.app.kera.data.models.DisplayDailyReportResponseModel.DataBean.DocsBean" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/outer_report_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/blue_fcfdfd"
        android:outlineAmbientShadowColor="@color/pink_label"
        android:outlineSpotShadowColor="@color/pink_label"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
      >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/before_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"


            >

            <TextView
                android:id="@+id/textView_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textStyle="bold"
                android:textColor="#1A2F50"
                android:textSize="15sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_marginEnd="16dp"
                android:textSize="@dimen/_12sdp"
                android:maxLines="4"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textColor="#97B4D8"
                app:layout_constraintTop_toBottomOf="@+id/textView_date"
                app:layout_constraintStart_toStartOf="@+id/textView_date"

                />

            <LinearLayout
                android:id="@+id/date_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view8">

                <TextView
                    android:id="@+id/textView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_clock"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/sf_ui_display_regular"
                    android:text="06:58 AM"
                    android:textColor="#50C4FF"


                    android:textSize="@dimen/_8ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView25"
                    app:layout_constraintStart_toEndOf="@+id/imageView25"
                    app:layout_constraintTop_toTopOf="@+id/imageView25" />


            </LinearLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#E9EFF7"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/txt_desc"
                />


            <TextView
                android:id="@+id/view_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:drawablePadding="10dp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="View Details"
                android:textColor="@color/pink_label"
                android:textStyle="bold"

                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toTopOf="@+id/view8"
                app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>









    </com.google.android.material.card.MaterialCardView>

</layout>
