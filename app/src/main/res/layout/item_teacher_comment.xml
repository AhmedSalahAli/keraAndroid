<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_margin="2dp"
        android:paddingBottom="@dimen/_30sdp"
        android:paddingTop="@dimen/_30sdp"
        android:background="@drawable/rounded_white_fcfcfc_dashed_stroke_e9eff7">


        <TextView
            android:id="@+id/textView_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_ui_display_semibold"
            android:text="@string/teacher_comment"
            android:textColor="@color/pink_label"
            android:textSize="@dimen/_14ssp"

            app:layout_constraintEnd_toEndOf="@+id/textView_comment"
            app:layout_constraintStart_toStartOf="@+id/guideline52"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.cardview.widget.CardView
            android:id="@+id/save_commentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/textView_comment"
            app:layout_constraintEnd_toEndOf="@+id/textView_comment"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="5dp"

            app:cardBackgroundColor="@color/white">
            <TextView
                android:id="@+id/save_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/textView_comment"
                android:text="@string/Save"
                android:textColor="#5881A4"
                android:textSize="@dimen/_12ssp"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:fontFamily="@font/sf_ui_display_semibold"
                android:background="@color/transparent"
                app:layout_constraintEnd_toEndOf="@+id/textView_comment"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="24dp" />

        <EditText
            android:id="@+id/textView_comment"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_white_fcfcfc_stroke_eeeff0"
            android:fontFamily="@font/sf_ui_display_regular"
            android:gravity="top"


            android:hint="@string/please_write_your_comment_here"
            android:padding="10dp"
            android:textColor="#1A2F50"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toStartOf="@+id/guideline53"
            app:layout_constraintStart_toStartOf="@+id/guideline52"
            app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>