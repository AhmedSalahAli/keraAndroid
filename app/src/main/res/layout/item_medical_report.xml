<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.example.kera.medical.model.DisplayMedicalReportResponseModel.DataBean.DocsBean" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/outer_report_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="@dimen/_20sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/before_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="@{model.teacher.username}"
                android:textColor="#152D4A"
                android:textSize="@dimen/_15ssp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView866"
                app:layout_constraintEnd_toStartOf="@+id/icon_expand"
                />
            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="@dimen/_10sdp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@{model.question2.answer}"
                android:fontFamily="@font/sf_ui_display_regular"
                android:textColor="#8C99A7"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                app:layout_constraintStart_toEndOf="@+id/imageView866"
                app:layout_constraintEnd_toStartOf="@+id/icon_expand"
                />
            <LinearLayout
                android:id="@+id/date_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toBottomOf="@+id/txt_desc"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@+id/icon_expand"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"

                >


                <TextView
                    android:id="@+id/before_textView_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/sf_ui_display_light"

                    android:textColor="#8C99A7"
                    android:textSize="@dimen/_12sdp"
                    android:drawableStart="@drawable/medical_ic"
                    android:drawablePadding="2dp"

                    android:layout_gravity="center"/>

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageView866"
                android:layout_width="50dp"

                android:layout_height="50dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/oval_dashed_stroke_ecc89c"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/before_imageView_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:image="@{model.teacher.profileImage}"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>





            <ImageView
                android:id="@+id/icon_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expand_icon1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_19sdp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/after_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
          android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:elevation="10dp">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="72dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="72dp" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="12dp"

                app:civ_border_color="#FFBB3B"
                app:civ_border_width="1dp"
                app:image="@{model.teacher.profileImage}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView68"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/medical_ic" />

            <TextView
                android:id="@+id/textView112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="@{model.teacher.username}"
                android:textColor="#152D4A"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView68"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView68" />

            <TextView
                android:id="@+id/textView113"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/sf_ui_display_regular"
                android:text="Medicine:"
                android:textColor="#1A2F50"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toEndOf="@+id/imageView68"
                app:layout_constraintTop_toBottomOf="@+id/textView112" />

            <TextView
                android:id="@+id/textView114"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:fontFamily="@font/sf_ui_display_regular"


                android:textColor="#2DB7BE"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView113"
                app:layout_constraintStart_toEndOf="@+id/textView113"
                app:layout_constraintTop_toTopOf="@+id/textView113" />

            <TextView
                android:id="@+id/textView115"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="@{model.question2.answer}"
                android:fontFamily="@font/sf_ui_display_light"

                android:textColor="#1A2F50"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView113" />


            <com.example.kera.utils.RoundCornerLayout
                android:id="@+id/roundCornerLayout6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="13dp"
                app:layout_constraintCircleRadius="5dp"

                android:background="@drawable/rounded_white_pink_stroke_f2818a"
                app:layout_constraintEnd_toStartOf="@+id/roundCornerLayout7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline32"
                app:layout_constraintTop_toBottomOf="@+id/textView115">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:image="@{model.images[0]}"

                    />
            </com.example.kera.utils.RoundCornerLayout>

            <com.example.kera.utils.RoundCornerLayout
                android:id="@+id/roundCornerLayout7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                app:layout_constraintCircleRadius="5dp"
                android:background="@drawable/rounded_white_pink_stroke_f2818a"
                app:layout_constraintBottom_toBottomOf="@+id/roundCornerLayout6"
                app:layout_constraintEnd_toStartOf="@+id/roundCornerLayout8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/roundCornerLayout6"
                app:layout_constraintTop_toTopOf="@+id/roundCornerLayout6">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:image="@{model.images[1]}" />
            </com.example.kera.utils.RoundCornerLayout>

            <com.example.kera.utils.RoundCornerLayout
                android:id="@+id/roundCornerLayout8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                app:layout_constraintCircleRadius="5dp"

                android:background="@drawable/rounded_white_pink_stroke_f2818a"
                app:layout_constraintBottom_toBottomOf="@+id/roundCornerLayout7"
                app:layout_constraintEnd_toEndOf="@+id/guideline33"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/roundCornerLayout7"
                app:layout_constraintTop_toTopOf="@+id/roundCornerLayout7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:image="@{model.images[2]}"/>
            </com.example.kera.utils.RoundCornerLayout>

            <ImageView
                android:id="@+id/imageView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundCornerLayout6"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_line_orange" />

            <TextView
                android:id="@+id/textView116"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/sf_ui_display_light"

                android:textColor="#8C99A7"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView69"
                app:layout_constraintEnd_toStartOf="@+id/icon_colaps"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView69"
                app:layout_constraintTop_toTopOf="@+id/imageView69" />

            <ImageView
                android:id="@+id/icon_colaps"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/expand_icon2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintStart_toStartOf="@+id/profile_img"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>
